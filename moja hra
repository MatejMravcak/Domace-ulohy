import tkinter
import threading
import random
import time

def nacitaj_mapu():
    h = open(file='txt.txt')

    sirka = int(h.readline())

    vyska = int(h.readline())

    mapa = []

    pacman = False
    mario = False
    # pre kazdy riadok mapy precitaj kazdy riadok a vytvor z nich zoznam (rozsah je po vysku)
    for i in range(0, 12):
        citat = h.readline()
        mapa.append(list(citat))

    h.close()
    duch_x = 0
    duch_y = 0
    pac_x = 0
    pac_y = 0
    for y in range(0, vyska):
        # ak sme ich oboch nasli, tak vybehni z cyklu
        if pacman and mario:
            break;
        for x in range(0, sirka):
            # ak na sucasnom policku sa ma nachadzat postavicka...
            if mapa[y][x] == 'v':
                # tak to prepiseme na volne policko a ulozime si poziciu a zmenime
                # najdenie pacmana na True, aby sme vybehli z vonkajsieho cyklu von
                mapa[y][x] = ' '
                pac_x = x
                pac_y = y

                pacman = True
                # vkladame do sceny potvorku, zloducha
            elif mapa[y][x] == 'm':
                mapa[y][x] = ' '
                duch_x = x
                duch_y = y


                mario = True

            if pacman and mario:
                    break;


    return sirka, vyska, mapa, pac_x, pac_y, duch_x, duch_y

######################################################




def movephotoimage(event):
    if event.keysym == 'Up':
        canvas.move(1, 0, -4)
    elif event.keysym == 'Down':
        canvas.move(1, 0, 4)
    elif event.keysym == 'Left':
        canvas.move(1, -4, 0)
    elif event.keysym == 'Right':
        canvas.move(1, 4, 0)
    elif event.keysym == 'w':
        canvas.move(2, 0, -4)
    elif event.keysym == 's':
        canvas.move(2, 0, 4)
    elif event.keysym == 'a':
        canvas.move(2, -4, 0)
    else:
        canvas.move(2, 4, 0)



def vytvor_platno(mapa, vyska, sirka, cell_size, photoimage):
    canvas = tkinter.Canvas(okno, \
                            width=500 * cell_size, \
                            height=500 * cell_size)
    canvas.config(bg='pink')

    canvas.pack()

    for y in range(0, vyska):
        for x in range(0, sirka):
            if mapa[y][x] == '#':
                canvas.create_image(x * cell_size + 150 / 2, \
                                    y * cell_size + 150 / 2, \
                                    image=photoimage)

    return canvas




pac_x = 0
pac_y = 0

duch_x = 0
duch_y = 0
mapa = []

sirka = 20
vyska = 0

cell_size = 80


okno = tkinter.Tk()
okno.title('bludisko')

sirka, vyska, mapa, pac_x, pac_y, duch_x, duch_y = nacitaj_mapu()



photoimage = tkinter.PhotoImage(file='wall.png')

# volame funkciu vytvor_platno tak, ze ju priradime do premennej. v zatvorke musia byt nazvy vsetkych premennych, ktore potrebuje na inicializaciu
canvas = tkinter.Canvas(okno, vyska, sirka, cell_size, photoimage)

hlava = tkinter.PhotoImage(file='files/duck.png')
pacman = canvas.create_image (pac_x * cell_size + cell_size / 2, \
                              pac_y * cell_size + cell_size / 2, \
                              image=hlava)

canvas.bind_all('<KeyPress-Up>', movephotoimage)
canvas.bind_all('<KeyPress-Down>', movephotoimage)
canvas.bind_all('<KeyPress-Left>', movephotoimage)
canvas.bind_all('<KeyPress-Right>', movephotoimage)
okno.mainloop()
terminate = True
